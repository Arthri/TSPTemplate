<Project Sdk="Microsoft.NET.Sdk">

  <!--

    ⚠️ DO NOT EDIT THIS FILE ⚠️

    This file should be edited from within the IDE/Visual Studio.
    Only edit this file as a last resort.

  -->



  <!-- Plugin Information -->
  <PropertyGroup>
    <!-- Plugin Name -->
    <!-- <AssemblyTitle>Company.Plugin</AssemblyTitle> -->

    <!-- Authors of the plugin -->
    <Authors>Template.Authors</Authors>

    <!--
      A semicolon-delimited list of tags
      https://docs.microsoft.com/en-us/nuget/reference/msbuild-targets#pack-target-inputs

      Compound words should be split into multiple tags
      https://github.com/NuGet/docs.microsoft.com-nuget/issues/1327#issuecomment-526295122
    -->
    <PackageTags>terraria;tshock;plugin</PackageTags>

    <!-- Project Name -->
    <Product>Company.Plugin</Product>

    <!--
      The title is implicitly set to $(AssemblyName),
      so there's no need to re-set it
    -->
    <!-- Plugin Name -->
    <!-- <Title>Company.Plugin</Title> -->

    <!-- Plugin Version -->
    <Version>1.0.0</Version>
  </PropertyGroup>



  <!-- Language Options -->
  <PropertyGroup>
    <!-- Enable default global usings such as System and System.Collections -->
    <ImplicitUsings>enable</ImplicitUsings>

    <!--
      Whether or not to enable Nullable Reference Types.
      Not to be confused with Nullable<T>
    -->
    <Nullable>enable</Nullable>
  </PropertyGroup>



  <!-- Assembly Options -->
  <PropertyGroup>
    <!-- Target .NET Framework Version -->
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>



  <!-- NuGet References -->
  <ItemGroup>
    <PackageReference Include="OTAPI.Upcoming" Version="3.1.12-alpha" />
    <PackageReference Include="TSAPI" Version="5.0.0-beta" />
    <PackageReference Include="TShock" Version="5.0.0-beta" />
  </ItemGroup>



  <!-- Update Global Usings -->
  <ItemGroup Condition="'$(ImplicitUsings)' == 'true' Or '$(ImplicitUsings)' == 'enable'">
    <Using Include="Microsoft.Xna.Framework" />
    <Using Include="System.IO.Streams" />
    <Using Include="Terraria" />
    <Using Include="Terraria.ID" />
    <Using Include="TerrariaApi.Server" />
    <Using Include="TShockAPI" />
  </ItemGroup>



  <!-- Source Files -->
  <ItemGroup>
    <Compile Update="PluginName.Boilerplate.cs" DependentUpon="PluginName.cs" />
  </ItemGroup>

</Project>
